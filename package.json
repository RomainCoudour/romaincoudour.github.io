{
	"name": "romaincoudour.github.io",
	"homepage": "https://romaincoudour.github.io",
	"version": "0.1.0",
	"private": true,
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick lint-staged --staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,jsx}": [
			"eslint . --fix"
		],
		"src/**/*.scss": [
			"stylelint --syntax scss --fix"
		]
	},
	"dependencies": {
		"@fortawesome/fontawesome-free": "^5.12.0",
		"gh-pages": "^2.1.1",
		"node-sass": "^4.14.1",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-scripts": "^3.4.0"
	},
	"scripts": {
		"predeploy": "npm run build",
		"deploy": "gh-pages -b master -d build",
		"start": "react-scripts start",
		"build": "react-scripts build",
		"lint": "eslint ."
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"eslint-config-airbnb": "^18.0.1",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.18.3",
		"husky": "^4.2.3",
		"prettier": "^1.19.1",
		"pretty-quick": "^2.0.1",
		"lint-staged": "^8.1.3"
	}
}
